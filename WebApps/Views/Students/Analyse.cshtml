@model ConsoleAppProject.App03.StudentGrades;
@using ConsoleAppProject.App03;
@using System.ComponentModel.DataAnnotations;

@{
    ViewData["Title"] = "Analyse";
}

<html>
<head>
    <h1>Analyse Grades</h1>
    <h2>by Tyronne Bradburn</h2>
    <p>
        Displays the statistics of the marks gained and
        displays the percentage of the student grades.
    </p>
    @{
        int first = 0;
        int second = 0;
        int secondII = 0;
        int third = 0;
        int failed = 0;
        int marks = 0;

        foreach (var item in Model.Marks)
        {
            if (item >= 70)
                first += 1;
            else if (item >= 60)
                second++;
            else if (item >= 50)
                secondII++;
            else if (item >= 40)
                third++;
            else
                failed++;

            marks += item;
        }

        marks = marks / Model.Marks.Count();
    }
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                ['First', @first],
                ['Upper Second', @second],
                ['Lower Second', @secondII],
                ['Third', @third],
                ['Failled', @failed]
            ]);

            var options = {
                title: 'Student Grades data based on @Model.Marks.Count() students. Average student mark: @marks'
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart'));

            chart.draw(data, options);
        }
    </script>
</head>
<body>
    <section>
        <h2>Statistics</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-center table-success">
                    <th>No Student</th>
                    <th>Min Mark</th>
                    <th>Max Mark</th>
                    <th>Mean Mark</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <td>@Model.Students.Length</td>
                    <td>@Model.Minimum </td>
                    <td>@Model.Maximum</td>
                    <td>@Model.Mean.ToString("0.0")</td>
                </tr>
            </tbody>
        </table>
    </section>
    <section>
        <h2>Grade Profile</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-center table-info">
                    <th>Ungraded</th>
                    <th>Fail</th>
                    <th>Grade D</th>
                    <th>Grade C</th>
                    <th>Grade B</th>
                    <th>Grade A</th>
                </tr>
            </thead>
            <tr class="text-center">
                @foreach (int count in Model.GradeProfile)
                {
                    double percent = (double)count / Model.Marks.Length;
                    <td>@percent.ToString("0.0%")</td>
                }
            </tr>
        </table>
    </section>
    <div id="piechart" style="width: 900px; height: 500px;"></div>
</body>
</html>